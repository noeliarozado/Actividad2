<Window x:Class="Actividad2.gui.MenuPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Actividad2.gui"
        mc:Ignorable="d"
        Title="MenuPrincipal" Height="450" Width="800" Background="#E4EEFF">
    <Grid>
        <Button x:Name="btnLineas" Content="Gestión de líneas" HorizontalAlignment="Left" Height="47" Margin="204,0,0,0" VerticalAlignment="Center" Width="121" Click="btnLineas_Click" Background="White" Foreground="Black"/>
        <Button x:Name="btnParadas" Content="Gestión de itinerarios" HorizontalAlignment="Left" Height="47" Margin="419,0,0,0" VerticalAlignment="Center" Width="121" Click="btnParadas_Click" Background="White" Foreground="Black"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="204,68,0,0" VerticalAlignment="Top" Width="100" Source="/resources/lineabus.png"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="419,68,0,0" VerticalAlignment="Top" Width="100" Source="/resources/paradabus.png"/>
    </Grid>
</Window>